{
	"name": "sdd-vscode-ext",
	"displayName": "SDD VSCode Extension",
	"description": "VS Code extension for Specification-Driven Development (SDD) workflows and spec navigation",
	"version": "0.0.1",
	"publisher": "your-publisher-name",
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": ["Other"],
	"activationEvents": ["onCommand:sdd-vscode-ext.helloWorld"],
	"main": "./out/extension.js",
		"contributes": {
			"viewsContainers": {
				"activitybar": [
							{
								"id": "specDrivenDevelopment",
								"title": "Specify",
								"icon": "$(book)"
							}
				]
			},
			"views": {
				"specDrivenDevelopment": [
					{
						"id": "specNavigationView",
						"name": "Spec Navigation",
						"icon": "$(book)"
					},
					{
						"id": "requirementsView",
						"name": "REQUIREMENTS",
						"icon": "$(settings-gear)"
					},
					{
						"id": "implementationsView",
						"name": "IMPLEMENTATIONS",
						"icon": "$(package)"
					}
				]
			},
			"commands": [
				{
					"command": "sdd-vscode-ext.helloWorld",
					"title": "Hello World"
				},
				{
					"command": "sdd-vscode-ext.reparseSpec",
					"title": "Reparse Spec",
					"icon": "$(refresh)"
				},
				{
					"command": "sdd-vscode-ext.createNewFeature",
					"title": "SDD: Create New Feature",
					"icon": "$(add)"
				},
				{
					"command": "sdd-vscode-ext.setupPlan",
					"title": "SDD: Setup Implementation Plan",
					"icon": "$(checklist)"
				},
				{
					"command": "sdd-vscode-ext.checkPrerequisites",
					"title": "SDD: Check Task Prerequisites",
					"icon": "$(check)"
				},
				{
					"command": "sdd-vscode-ext.updateAgentContext",
					"title": "SDD: Update Agent Context",
					"icon": "$(robot)"
				}
			],
			"menus": {
				"commandPalette": [
					{
						"command": "sdd-vscode-ext.createNewFeature"
					},
					{
						"command": "sdd-vscode-ext.setupPlan"
					},
					{
						"command": "sdd-vscode-ext.checkPrerequisites"
					},
					{
						"command": "sdd-vscode-ext.updateAgentContext"
					}
				],
				"view/title": [
					{
						"command": "sdd-vscode-ext.reparseSpec",
						"when": "view == specNavigationView",
						"group": "navigation"
					},
					{
						"command": "sdd-vscode-ext.reparseSpec",
						"when": "view == requirementsView",
						"group": "navigation"
					},
					{
						"command": "sdd-vscode-ext.reparseSpec",
						"when": "view == implementationsView",
						"group": "navigation"
					},
					{
						"command": "sdd-vscode-ext.createNewFeature",
						"when": "view == specNavigationView",
						"group": "navigation"
					},
					{
						"command": "sdd-vscode-ext.setupPlan",
						"when": "view == specNavigationView",
						"group": "navigation"
					}
				]
			}
		},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
		"repository": {
			"type": "git",
			"url": "https://github.com/cassiebreviu/sdd-vscode-ext.git"
		},
		"devDependencies": {
		"@types/vscode": "^1.80.0",
		"typescript": "^5.0.0",
		"tslint": "^6.1.3",
		"@types/node": "^20.0.0"
	}
}
