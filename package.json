{
  "name": "specify",
  "displayName": "Specify",
  "description": "A VS Code extension for managing specifications for software development.",
  "version": "0.0.5",
  "publisher": "Microsoft",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:specify.reparseSpec",
    "onCommand:specify.startProject"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "specDrivenDevelopment",
          "title": "Specify",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "specDrivenDevelopment": [
        {
          "id": "actionsView",
          "name": "ACTIONS",
          "icon": "$(zap)",
          "when": "true"
        },
        {
          "id": "specNavigationView",
          "name": "SPEC NAVIGATION",
          "icon": "$(book)"
        },
        {
          "id": "requirementsView",
          "name": "REQUIREMENTS",
          "icon": "$(settings-gear)"
        },
        {
          "id": "implementationsView",
          "name": "IMPLEMENTATIONS",
          "icon": "$(package)"
        }
      ]
    },
    "commands": [
      {
        "command": "sdd-vscode-ext.reparseSpec",
        "title": "Reparse Spec",
        "icon": "$(refresh)"
      },
      {
        "command": "sdd-vscode-ext.startProject",
        "title": "1. Create New Spec",
        "icon": "$(plus)"
      },
      {
        "command": "sdd-vscode-ext.specifyCommand",
        "title": "2. Specify Command",
        "icon": "$(lightbulb)"
      },
      {
        "command": "sdd-vscode-ext.planCommand",
        "title": "3. Plan Command",
        "icon": "$(wand)"
      },
      {
        "command": "sdd-vscode-ext.tasksCommand",
        "title": "4. Create Tasks",
        "icon": "$(checklist)"
      },
      {
        "command": "sdd-vscode-ext.implementSpecRocket",
        "title": "5. Implement Spec",
        "icon": "$(rocket)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sdd-vscode-ext.reparseSpec",
          "when": "view == specNavigationView",
          "group": "navigation"
        },
        {
          "command": "sdd-vscode-ext.reparseSpec",
          "when": "view == requirementsView",
          "group": "navigation"
        },
        {
          "command": "sdd-vscode-ext.reparseSpec",
          "when": "view == implementationsView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cassiebreviu/sdd-vscode-ext.git"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "tslint": "^6.1.3",
    "@types/node": "^20.0.0"
  }
}